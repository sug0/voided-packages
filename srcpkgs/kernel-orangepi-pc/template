# Template file for 'kernel-orangepi-pc'
pkgname=kernel-orangepi-pc
version=6.2.13
_armbian_ver=23.5.0
_armbian_rel=bookworm_edge
_trunk=140
revision=1
archs="armv7l*"
create_wrksrc=1
hostmakedepends="xz p7zip uboot-mkimage"
short_desc="Pre-compiled Armbian kernel for the Orange Pi PC"
maintainer="Tiago Carvalho <t1ago_@outlook.com>"
license="GPL-2.0-only"
homepage="https://www.armbian.com"
_baseurl="https://github.com/armbian-gama/os/releases/download/${_armbian_ver}-trunk.${_trunk}"
_armbian="Armbian_${_armbian_ver}-trunk.${_trunk}_Orangepipc_${_armbian_rel}_${version}"
distfiles="${_baseurl}/${_armbian}.img.xz"
checksum=118bc6c2ea8da4597edb6e31262222661c0acf6866415bce73916f0ed4754d8e
nopie=true

post_extract() {
	7z x ${_armbian}.img \
		-i'!usr/lib/firmware' \
		-i'!usr/lib/modules' \
		-i"!boot/vmlinuz-${version}-sunxi" \
		-i"!boot/dtb-${version}-sunxi"
	rm ${_armbian}.img
}

do_install() {
	# install boot script and kernel
	vmkdir boot
	mkimage \
		-A arm \
		-T script \
		-C none \
		-d ${FILESDIR}/boot.cmd \
		${DESTDIR}/boot/boot.scr
	mkimage \
		-f auto \
		-A arm \
		-O linux \
		-T kernel \
		-C none \
		-a 42000000 \
		-e 42000000 \
		-c "Linux kernel" \
		-d boot/vmlinuz-${version}-sunxi \
		-b boot/dtb-${version}-sunxi/sun8i-h3-orangepi-pc.dtb \
		${DESTDIR}/boot/board.itb

	# install kernel modules
	vmkdir usr/lib/modules
	cp -r usr/lib/modules/${version}-sunxi ${DESTDIR}/usr/lib/modules

	# install firmware files
	vmkdir usr/lib
	cp -r usr/lib/firmware ${DESTDIR}/usr/lib
}

firmware-orangepi-pc_package() {
	pkgname=firmware-orangepi-pc
	short_desc="Armbian firmware files for the Orange Pi PC"
	pkg_install() {
		vmove usr/lib/firmware
	}
}
