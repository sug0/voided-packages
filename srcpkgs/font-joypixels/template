font_dirs="/usr/share/fonts/JoyPixels"

do_install() {
	vmkdir usr/share/fonts/JoyPixels
	vcopy joypixels-android.ttf usr/share/fonts/JoyPixels
}

post_install() {
	vlicense free-license.pdf
	vlicense joypixels-license-appendix.pdf
}
