# Template file for 'fstar-bin'
pkgname=fstar-bin
version=2022.05.06
revision=2
archs="x86_64"
wrksrc="fstar"
depends="z3"
short_desc="Proof-oriented programming language - binary package"
maintainer="Tiago Carvalho <t1ago_@outlook.com>"
license="Apache-2.0"
homepage="https://www.fstar-lang.org"
distfiles="https://github.com/FStarLang/FStar/releases/download/v2022.05.06/fstar_${version}_Linux_x86_64.tar.gz"
checksum=933ae5d39d9a9087f696903777940f2e34885ce109801e14c0156f51ddf42c4b

do_install() {
	vmkdir usr/lib/fstar
	vmkdir usr/bin

	cp -R ./* ${DESTDIR}/usr/lib/fstar/
	ln -s /usr/lib/fstar/bin/fstar.exe ${DESTDIR}/usr/bin/fstar
}
